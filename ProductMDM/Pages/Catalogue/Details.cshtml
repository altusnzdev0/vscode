@page
@model ProductMDM.Pages.Catalogue.DetailsModel

<h2>@Model.Product?.Name</h2>

<div class="row">
  <div class="col-md-5">
    @if (Model.PrimaryImage != null) {
      <img src="@Model.PrimaryImage" class="img-fluid" />
    }
  </div>
  <div class="col-md-7">
    <p><strong>SKU:</strong> @Model.Product?.SKU</p>
    <p>@Model.Product?.Description</p>
    <p><strong>Default Price:</strong> @(Model.DefaultPrice.HasValue ? Model.DefaultPrice.Value.ToString("C2") : "N/A")</p>

    <h5>Attributes</h5>
    <ul>
      @foreach(var a in Model.Attributes){ <li><strong>@a.Key:</strong> @a.Value</li> }
    </ul>
  </div>
</div>
