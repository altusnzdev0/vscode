@page
@model ProductMDM.Pages.Catalogue.IndexModel

<h1>Catalogue</h1>

<form method="get" class="row g-2 mb-3">
  <div class="col-md-4">
    <input name="search" value="@Model.Search" class="form-control" placeholder="Search by name or SKU" />
  </div>
  <div class="col-md-2">
    <button class="btn btn-primary">Search</button>
  </div>
</form>

<div class="row">
  @foreach (var p in Model.Items)
  {
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <div class="card h-100">
        @if (!string.IsNullOrEmpty(p.PrimaryImage))
        {
          <img src="@p.PrimaryImage" class="card-img-top" style="object-fit:cover;height:200px;" />
        }
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">@p.Name</h5>
          <p class="card-text small">SKU: @p.SKU</p>
          <p class="card-text">@(p.Description?.Length > 120 ? p.Description.Substring(0, 117) + "..." : p.Description)</p>
          <div class="mt-auto">
            <strong>@(p.DefaultPrice == 0 ? "" : p.DefaultPrice.ToString("C2"))</strong>
            <a href="/Admin/Products/Edit?id=@p.ProductId" class="btn btn-sm btn-outline-primary float-end">Details</a>
          </div>
        </div>
      </div>
    </div>
  }
</div>
